@page
@model WebApp.Pages.GameStates.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GameState</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameState.Name" class="control-label"></label>
                <input asp-for="GameState.Name" class="form-control" />
                <span asp-validation-for="GameState.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameState.BoardString" class="control-label"></label>
                <input asp-for="GameState.BoardString" class="form-control" />
                <span asp-validation-for="GameState.BoardString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameState.MinesString" class="control-label"></label>
                <input asp-for="GameState.MinesString" class="form-control" />
                <span asp-validation-for="GameState.MinesString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameState.BoardHeight" class="control-label"></label>
                <input asp-for="GameState.BoardHeight" class="form-control" />
                <span asp-validation-for="GameState.BoardHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameState.BoardWidth" class="control-label"></label>
                <input asp-for="GameState.BoardWidth" class="form-control" />
                <span asp-validation-for="GameState.BoardWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameState.MinesAmount" class="control-label"></label>
                <input asp-for="GameState.MinesAmount" class="form-control" />
                <span asp-validation-for="GameState.MinesAmount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GameState.PlayerZeroMove" /> @Html.DisplayNameFor(model => model.GameState.PlayerZeroMove)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
